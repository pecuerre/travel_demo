<div class="hotel-list">
  <div class="row image-box hotel listing-style1">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <article class="box">
          <figure>
            <a title="" href="ajax/slideshow-popup.html" class="hover-effect popup-gallery">
              <%= product_image(product, :itemprop => "image") %>
            </a>
          </figure>
          <div class="details">
              <span class="price"><small>AVG/NIGHT</small><%= Spree::Money.new(product.price).to_html %></span>
              <h4 class="box-title">
                <%= link_to(product_path(product), :itemprop => "name", :title => product.name) do  %> 
                  <%= product.name %>
                <% end %>
                <small>
                  <i class="soap-icon-departure yellow-color"></i> 
                  <%= link_to ' ' + product.destination, product.destination_taxon %>
                </small>
              </h4>
              <div class="feedback">
                  <div data-placement="bottom" data-toggle="tooltip" class="five-stars-container" title="4 stars"><span style="width: 80%;" class="five-stars"></span></div>
                  <span class="review">270 reviews</span>
              </div>
              <p class="description"><%= truncate(product.description, :length => 300) %></p>
              <div class="action">
                  <a class="button btn-small" href="hotel-detailed.html">SELECT</a>
                  <a class="button btn-small yellow popup-map" href="#" data-box="48.856614, 2.352222">VIEW ON MAP</a>
              </div>
      </article>
    </div>
  <% end %>
  </div>
</div>
