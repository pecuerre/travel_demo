<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:listing_static_events) %>
<% end %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
      <%= button_link_to t(:new_static_event), new_admin_static_event_path, { :icon => 'plus', :id => 'admin_new_static_event' } %>
    </li>
  </ul>
<% end %>

<table class="index" id='listing_static_events' data-hook>
  <colgroup>
    <col style="width: 25%" />
    <col style="width: 55%" />
    <col style="width: 20%" />
  </colgroup>
  <thead>
    <tr data-hook="tax_header">
      <th><%= t(:name) %></th>
      <th><%= t(:description) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @static_events.each do |static_event| %>
      <tr id="<%= spree_dom_id static_event %>" data-hook="static_event_row" class="<%= cycle('odd', 'even')%>">
        <td><%= static_event.name %></td>
        <td><%= static_event.description %></td>
        <td class="actions">
          <%= link_to_with_icon('image', Spree.t(:image), admin_product_images_url(static_event), {:data=>{:action=>'image'},:no_text=>true}) %>
          <%= link_to_edit static_event, :no_text => true %>
          <%= link_to_delete static_event, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
