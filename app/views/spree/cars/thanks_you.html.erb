<section id="content" class="gray-area">
  <div class="container">
    <div class="row">
      <div id="main" class="col-sm-8 col-md-9">
        <div class="booking-information travelo-box">
          <h2>Booking Confirmation</h2>
          <hr/>
          <div class="booking-confirmation clearfix">
            <i class="soap-icon-recommend icon circle"></i>

            <div class="message">
              <h4 class="main-message">Thank You. Your Booking Order is Confirmed Now.</h4>

              <p>A confirmation email has been sent to your provided email address.</p>
            </div>
            <a href="#" class="print-button button btn-small">PRINT DETAILS</a>
          </div>
          <hr/>
          <h2>Traveler Information</h2>
          <dl class="term-description">
            <dt>Booking number:</dt>
            <dd><%= @booking.booking_number %></dd>
            <dt>First name:</dt>
            <dd><%= @booking.first_name %></dd>
            <dt>Last name:</dt>
            <dd><%= @booking.last_name %></dd>
            <dt>E-mail address:</dt>
            <dd><%= @booking.email %></dd>
            <dt>Street Address and number:</dt>
            <dd><%= @booking.street_address %></dd>
            <dt>Town / City:</dt>
            <dd><%= @booking.town %></dd>
            <dt>ZIP code:</dt>
            <dd><%= @booking.zip %></dd>
            <dt>Country:</dt>
            <dd><%= @booking.country %></dd>
          </dl>
          <hr/>
          <h2>Payment</h2>

          <p><%= @booking.payment %></p>
          <hr/>
          <h2>View Booking Details</h2>

          <p><%= @booking.view_details %></p>
          <br/>
          <a href="#" class="red-color underline view-link">https://www.travelo.com/booking-details/?=f4acb19f-9542-4a5c-b8ee</a>
        </div>
      </div>
      <div class="sidebar col-sm-4 col-md-3">
        <%= render partial: 'spree/shared/help' %>
      </div>
    </div>
  </div>
</section>