                <a href="##"><%= image_tag('icon/tours_white_32x32.png', class: 'small_icon') %></a>
              </div>
              <div class="selectbox">

                <div class="col1">100 Hotels available</div>
                <div class="col2">
                  <a class="button" href="<%= detail_destinations_path(:params => {:destiny => name}) %>"><%= t(:see_all) %></a>
                </div>

              </div>
              <figure class="animated" data-animation-type="fadeInDown" data-animation-delay="0">
                <a class="hover-effect" href="<%= detail_destinations_path(:params => {:destiny => name}) %>" title=""><%= image_tag('https://s3-us-west-2.amazonaws.com/webtriptocuba/'+image, class: 'inside_image') %></a>
