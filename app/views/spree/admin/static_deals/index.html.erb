<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to t('new_deal'), new_admin_static_deal_path, :icon => 'plus', :id => 'admin_new_slide_link' %>
    </li>
<% end %>

<% content_for :page_title do %>
    <%= t('StaticDeals') %>
<% end %>
<table class="index sortable" id="listing_slides" data-hook data-sortable-link="<%=  %>" >
  <thead>
  <tr data-hook="admin_slides_index_headers">
    <th><%= Spree.t(:name) %></th>
    <th><%= Spree.t(:price) %></th>
    <th><%= Spree.t(:stars) %></th>
    <th data-hook="admin_slides_index_header_actions" class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @static_deals.each do |static_deal| %>
      <tr id="<%= spree_dom_id static_deal   %>" data-hook="admin_slides_index_rows">
        <td class="align-center"><%= static_deal.name  %></td>
        <td class="align-center"><%= static_deal.price  %></td>
        <td class="align-center"><%= static_deal.stars %></td>
        <td data-hook="admin_slides_index_row_actions" class="actions">
          <%= link_to_edit static_deal, :no_text => true, :class => 'edit' %>
          &nbsp;
          <%= link_to_delete static_deal, :no_text => true %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

