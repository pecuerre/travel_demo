<h1>Listing nomads</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Contry</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nomads.each do |nomad| %>
      <tr>
        <td><%= nomad.first_name %></td>
        <td><%= nomad.last_name %></td>
        <td><%= nomad.age %></td>
        <td><%= nomad.email %></td>
        <td><%= nomad.contry %></td>
        <td><%= nomad.destination %></td>
        <td><%= link_to 'Show', admin_nomad_path(nomad) %></td>
        <td><%= link_to 'Edit', edit_admin_nomad_path(nomad) %></td>
        <td><%= link_to 'Destroy', admin_nomad_path(nomad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

