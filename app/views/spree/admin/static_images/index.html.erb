<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:listing_static_images) %>
<% end %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
      <%= button_link_to t(:new_static_image), new_admin_static_image_path, { :icon => 'plus', :id => 'admin_new_static_image' } %>
    </li>
  </ul>
<% end %>

<table class="index" id='listing_static_images' data-hook>
  <colgroup>
    <col style="width: 20%" />
    <col style="width: 50%" />
    <col style="width: 15%" />
  </colgroup>
  <thead>
    <tr data-hook="tax_header">
      <th><%= t(:key) %></th>
      <th><%= t(:image) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @static_images.each do |static_image| %>
      <tr id="<%= spree_dom_id static_image %>" data-hook="static_image_row" class="<%= cycle('odd', 'even')%>">
        <td><%= static_image.key %></td>
        <td><%= static_image.image %></td>
        <td class="actions">
          <%= link_to_edit static_image, :no_text => true %>
          <%= link_to_delete static_image, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
