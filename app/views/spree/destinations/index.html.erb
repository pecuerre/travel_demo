    <div class="row image-box style3">
      <% @destinos14.each do  |name, image| %>
          <div class="col-sms-6 col-sm-6 col-md-3">
            <article class="box destiny">
              <div class="transparentbox">
              </div>
              <div class="textbox text-center">
                <h4 class="image-title"><%= name %></h4>
                <h5 class="image-reviews">270 reviews</h5>

                <div data-placement="left" data-toggle="tooltip" title="4 stars" class="five-stars-container">
                  <span style="width: 80%;" class="five-stars"></span>
                </div>
              </div>
              <div class="iconbox text-center">
                <a href="##"><%= image_tag('icon/flight_white_32x32.png', class: 'small_icon') %></a>
                <a href="##"><%= image_tag('icon/hotel_white_32x32.png', class: 'small_icon') %></a>
