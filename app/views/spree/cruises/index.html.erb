<% content_for :pagetitle do %>
  <%= render partial: 'spree/cruises/pagetitle' %>
<% end %>

<% content_for :travel_search_box do %>
  <%= render :partial => 'spree/cruises/search_box', :locals => {id: 'cruises', active: true} %> 
<% end %>

<% content_for :sidebar do %>
  <%= render partial: 'spree/cruises/filter' %>
<% end %>

<%= render partial: 'spree/cruises/sort_by' %>

<% if @products.any? %>
  <% if @view == 'grid' %>
    <%= render partial: 'spree/cruises/grid' %>
  <% elsif @view == 'block' %>
    <%= render partial: 'spree/cruises/block' %>
  <% else %>
   <%= render partial: 'spree/cruises/list' %>
  <% end %>
<% end %>

<% if @products.respond_to?(:num_pages) %>
  <%= paginate @products, theme: 'twitter-bootstrap-3' %>
<% end %>