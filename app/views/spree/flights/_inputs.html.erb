<div class="tab-pane fade <%= 'active in' if active %>" id="flights-tab">
    <form action="flight-list-view.html" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label><%= t(:leaving_from) %></label>
                    <input type="text" class="input-text full-width" placeholder="<%= t(:city_distirct_or_specific_airpot) %>" />
                </div>
                <div class="form-group">
                    <label><%= t(:going_to) %></label>
                    <input type="text" class="input-text full-width" placeholder="<%= t(:city_distirct_or_specific_airpot) %>" />
                </div>
            </div>
            
            <div class="col-md-4">
                <label><%= t(:departing_on) %></label>
                <div class="form-group row">
                    <div class="col-xs-6">
                        <div class="datepicker-wrap">
                            <input type="text" name="date_from" class="input-text full-width" placeholder="<%= t(:m_d_y) %>" />
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="selector">
                            <select class="full-width">
                                <option value="1"><%= t(:any_time) %></option>
                                <option value="2"><%= t(:morning) %></option>
                            </select>
                        </div>
                    </div>
                </div>
                <label><%= t(:arriving_on) %></label>
                <div class="form-group row">
                    <div class="col-xs-6">
                        <div class="datepicker-wrap">
                            <input type="text" name="date_to" class="input-text full-width" placeholder="<%= t(:m_d_y) %>" />
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="selector">
                            <select class="full-width">
                                <option value="1"><%= t(:any_time) %></option>
                                <option value="2"><%= t(:morning) %></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="form-group row">
                    <div class="col-xs-3">
                        <label><%= t(:adults) %></label>
                        <div class="selector">
                            <select class="full-width">
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                                <option value="4">04</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <label><%= t(:kids) %></label>
                        <div class="selector">
                            <select class="full-width">
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                                <option value="4">04</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-3">
                        <label><%= t(:infants) %></label>
                        <div class="selector">
                            <select class="full-width">
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                                <option value="4">04</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <label>&nbsp;</label>
                        <button class="full-width icon-check"><%= t(:search_now) %></button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
