<% content_for :pagetitle do %>
  <%= render partial: 'spree/hotels/pagetitle' %>
<% end %>

<% content_for :travel_search_box do %>
  <%= render partial: 'spree/shared/index_search_box' %>
<% end %>

<% content_for :sidebar do %>
  <%= render partial: 'spree/hotels/filter' %>
<% end %>

<%= render partial: 'spree/hotels/sort_by' %>

<% if @products.any? %>
  <% if @view == 'grid' %>
    <%= render partial: 'spree/hotels/grid' %>
  <% elsif @view == 'block' %>
    <%= render partial: 'spree/hotels/block' %>
  <% else %>
   <%= render partial: 'spree/hotels/list' %>
  <% end %>
<% end %>

<% if @products.respond_to?(:num_pages) %>
  <%= paginate @products, theme: 'twitter-bootstrap-3' %>
<% end %>

